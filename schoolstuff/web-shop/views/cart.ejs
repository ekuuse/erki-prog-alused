<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Shop Wow</title>
</head>
<style>
    body {
        margin: 0px;
        background-color: rgb(19, 19, 19);
        font-family:Verdana, Geneva, Tahoma, sans-serif
    }
    #navbar {
        background-color: #000000;
        color: #fff;
        position: fixed;
        top: 0;
        width: 100%;
        display: flex;
        padding: 0.5rem;
        z-index: 10;
        box-shadow: 0px 0px 90px rgba(0,0,0, 1);
    }
    #button {
        display: inline-block;
        padding: 7px 20px;
        background-color: rgb(0, 0, 0);
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: large;
        box-shadow: 0px 0px 40px rgba(255,255,255, 0.3);
    }
    #productcont {
        margin-top: 100px;
        padding: 60px;
        justify-content: center;
        display: flex;
        flex-direction: row-reverse;
        gap: 25px;
    }
    #product {
        background-color: rgb(43, 43, 43);
        color: white;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: auto;
        width: 300px;
        box-shadow: 0px 0px 90px rgba(255,255,255, 0.1);
    }
    #product img {
        border-radius: 10px;
        width: 100%;
    }
    #product a {
        display: inline-block;
        padding: 7px 20px;
        background-color: rgb(37, 37, 37);
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: large;
        margin-bottom: 15px;
    }
    #product p {
        text-align: center;
        padding: 8px;
    }
</style>
<body>
    <%- include('./navbar') %>
    <div id="productcont">
        <% books.map((item) => { %>
        <div id="product">
            <h4>
                <%= item.title %>
            </h4>
            <div style="height: 60%; width: 90%;">
                <img src= <%= item.imageUrl %>/>
            </div>
            <p>
                <%= item.description %>
            </p>
            <h3>
                Price: <%= item.price %>&euro;
            </h3>
            <a href="/cart">Buy</a>
            <a href="#" onclick="deleteItem('<%= item.id %>', '<%= item.price %>', 1)">Remove from cart</a>
        </div>
        <% }); %>
    </div>
    <script>
        function deleteItem(id, price, userid) {
            const data = {
                productId: id,
                price: parseFloat(price),
                userId: userid
            };
          fetch(`/cart/removecart`, {
            method: 'DELETE',
            headers: {
            'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
          })
          .then(response => {
            if (response.ok) {
              alert('Item deleted successfully');
              location.reload();
            } else {
              alert('Failed to delete the item');
            }
          })
          .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>