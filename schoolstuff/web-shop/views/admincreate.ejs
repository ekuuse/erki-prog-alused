<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Shop Wow</title>
</head>
<style>
    body {
        margin: 0px;
        background-color: rgb(19, 19, 19);
        font-family:Verdana, Geneva, Tahoma, sans-serif
    }
    #navbar {
        background-color: #000000;
        color: #fff;
        position: fixed;
        top: 0;
        width: 100%;
        display: flex;
        padding: 0.5rem;
        z-index: 10;
        box-shadow: 0px 0px 90px rgba(0,0,0, 1);
    }
    #button {
        display: inline-block;
        padding: 7px 20px;
        background-color: rgb(0, 0, 0);
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: large;
        box-shadow: 0px 0px 40px rgba(255,255,255, 0.3);
    }
    #productcont {
        margin-top: 0px;
        padding: 60px;
        justify-content: center;
        display: flex;
        flex-direction: row-reverse;
        gap: 25px;
    }
    #product {
        background-color: rgb(43, 43, 43);
        color: white;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: auto;
        width: 300px;
        box-shadow: 0px 0px 90px rgba(255,255,255, 0.1);
    }

    #product img {
        width: 90%;
        border-radius: 10px;
    }
    #product a {
        display: inline-block;
        padding: 7px 20px;
        background-color: rgb(37, 37, 37);
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: large;
        margin-bottom: 15px;
    }
    #editForm {
        color: white;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 12px;
        width: 80%;
        margin: 0 auto;
        align-items: center;
    }
    #editForm label {
        font-size: 16px;
        font-weight: bold;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }
    #editForm input, #editForm textarea {
        padding: 0px;
        background-color: rgb(62, 62, 62);
        color: white;
        border: none;
        border-radius: 8px;
        width: 100%;
        height: 35px;
        padding-left: 12px;
    }
    #editForm input:focus, #editForm textarea:focus {
        background-color: rgb(52, 52, 52);
        outline: none;
        box-shadow: 0px 0px 5px rgba(255, 255, 255, 0.5);
    }
</style>
<body>
    <%- include('./navbar') %>
    <div style="color:white;margin-top: 100px; display: flex; align-items: center; justify-content: center;">
        <h1>Create book</h1>
    </div>
    <div id="productcont">
        <div id="product">
            <form id="editForm">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <br><br>
        
                <label for="description">Description:</label>
                <textarea style="height: 100px; resize: none; padding-top: 12px;" id="description" name="description" placeholder="Enter text here..."></textarea>
                <br><br>
        
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" step="0.01" required>
                <br><br>
        
                <label for="imageUrl">Image URL:</label>
                <input type="text" id="imageUrl" name="imageUrl" required>
                <br><br>
            </form>
            <div style="display: flex; flex-direction: row; gap: 5px">
                <a href="#" onclick="createItem()">Create</a>
                <a href="/admin">Cancel</a>
            </div>
        </div>
    </div>
    <script>
        function createItem() {
            const form = document.getElementById('editForm');
        
            const formData = {
                title: form.title.value,
                description: form.description.value,
                price: parseFloat(form.price.value),
                imageUrl: form.imageUrl.value
            };
          fetch(`/admin/create`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
          })
          .then(response => {
            if (response.ok) {
              alert('Item created successfully');
              window.location.href = '/admin';
            } else {
              alert('Failed to create the item');
            }
          })
          .catch(error => console.error('Error:', error));
        }
    </script>
</body>

</html>